extends layout

block content
  .container
    .row
      .span12
        .hero-unit
          h1 Welcome to the Bookstore 
          h2.muted Buy some books!
    .row
      .span12
        .well
          ul 
            each prod in products
              li 
                span 
                    a(href="/product/#{prod.id}") #{prod.title}
                    | : #{prod.author}
          
          
