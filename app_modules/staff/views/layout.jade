  head
    title= title
    script(type='text/javascript', src='/js/jquery-1.8.0.min.js')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
    //link(rel='stylesheet', href='/bootstrap/css/navbar-fixed-top-hack.css')
    link(rel='stylesheet', href='/css/admin.css')
    script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')
    style(type="text/css")
      body { padding-top: 60px; }
      @media (max-width: 979px) { body { padding-top: 0px; } }
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href="/") Rylon Staff 
          .nav-collapse
            ul.nav
              li: a(href="/") Home 
              //li: a(href="/product") Products 
              //li: a(href="/orders") Orders 
          .nav-collapse.pull-right
            ul.nav
              if (locals.staff)
                li 
                  #account.navbar-text
                    a(href="/account") Account 
                    | (
                    a(href='/logout') logout
                    | )
              else
                li 
                  #account.navbar-text
                    | Account (
                    a(href='/login') login
                    )
 
            // form.navbar-search.pull-right
                input.search.query(type="text", placeHolder="User, Order, etc..")
    .container
      .row-fluid
        if locals.alert.length
          .alert
            b.close(data-dismiss="alert", type="button") x
            strong Alert:&nbsp;
            | #{locals.alert}
        if locals.error.length
          .alert.alert-error
            b.close(data-dismiss="alert", type="button") x
            strong Error:&nbsp;
            | #{locals.error}
        if locals.info.length
          .alert.alert-info
            b.close(data-dismiss="alert", type="button") x
            strong Info:&nbsp;
            | #{locals.info}
        if locals.success.length
          .alert.alert-success
            b.close(data-dismiss="alert", type="button") x
            strong Success:&nbsp;
            | #{locals.success}
     


    block content

