extends layout

block content
  .container
    .row-fluid
      .page-header 
        h2 Staff Home 
    .row-fluid
      .span12
        form(method="POST", action="/checkout/confirm")
          .row-fluid
            .span12
              .row-fluid
                .span4
                  legend 
                    | System Status &nbsp;
                  table.table-condensed.table-hover
                    tr 
                      td Products:
                      td #{counts.products}
                    tr
                      td Customers:
                      td #{counts.customers}
                    tr
                      td Orders Total:
                      td #{counts.orders}
                    tr
                      td Orders Pending:
                      td #{counts.processing}
                .span8
                  legend 
                    | Unshipped Orders &nbsp;




            

      
