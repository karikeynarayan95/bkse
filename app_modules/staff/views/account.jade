extends layout

include mixins/form

block content
  .container
    .row-fluid
      .page-header 
        h2 Edit Account 
    .row-fluid
      .span12
        form(method="POST", action="/account")
          .row-fluid
            .span9
              .row-fluid
                .span12.form-horizontal
                  legend Staff Info
                  mixin valinput('email', "Email", staff, valErrors)
                  mixin valinput('firstname', "First Name", staff, valErrors)
                  mixin valinput('lastname', "Last Name", staff, valErrors)
                  .control-group
                    label.control-label(for="password") Password 
                    .controls
                      input(type="password", id="password", name="password")
              .row-fluid
                .span12.form-actions
                  a.btn(href="/") Cancel 
                  &nbsp; &nbsp; &nbsp;
                  input.btn.btn-success(type="submit", value="Update")
  




            

      
